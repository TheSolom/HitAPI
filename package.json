{
    "name": "hitapi-monorepo",
    "version": "1.0.0",
    "description": "API Monitoring & Analytics Platform",
    "author": "TheSolom",
    "license": "MIT",
    "homepage": "https://github.com/TheSolom/HitAPI#readme",
    "private": true,
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TheSolom/HitAPI.git"
    },
    "bugs": {
        "url": "https://github.com/TheSolom/HitAPI/issues"
    },
    "type": "module",
    "workspaces": [
        "packages/*",
        "apps/*"
    ],
    "scripts": {
        "build:api": "npm run build --workspace=apps/api",
        "build:sdk-js": "npm run build --workspace=packages/sdk-js",
        "format": "prettier --write \"**/*.{ts,js,json,md}\"",
        "start:dev:api": "npm run start:dev --workspace=apps/api",
        "start:dev:sdk-js": "npm run build:watch --workspace=packages/sdk-js",
        "lint": "npm run lint --workspaces",
        "test": "npm test --workspaces"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.38.0",
        "@types/express": "^5.0.5",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.9.2",
        "@types/supertest": "^6.0.3",
        "eslint": "^9.39.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "globals": "^16.4.0",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "lint-staged": "^16.2.7",
        "prettier": "3.8.0",
        "source-map-support": "^0.5.21",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.5",
        "ts-loader": "^9.5.4",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.2"
    }
}
